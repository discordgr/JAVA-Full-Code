public class ImageSound extends Products 
{
	//final for all ImageSound
	
	protected final float discount = 0.25F;
	
	protected String type;
	protected String resolution;
	private boolean flag = false;
	
	public ImageSound(int code, String name, String year, String manufacturer, double price, String type  ) 
	{
		super(code, name, year, manufacturer, price);
		this.type = type;
		
	}
	
	public ImageSound (int code, String name, String year, String manufacturer, double price ,String type, String resolution)
	{
		super(code, name, year, manufacturer, price);
		this.type = type;
		this.resolution=resolution;
		this.flag = true;
	}
	
	public String getType()
	{
		return type;
	} 
	
	public void setType(String type)
	{
		this.type = type;
	}
	
	public String getResolution()
	{
		return this.resolution;
	}
	
	public void setResolution(String newresolution)
	{
		this.resolution = newresolution;
	}

		//we may have an abstract class but in order not to implement in lower classes we can call getDiscount from this class
	public float getDiscount() 
	{
		return discount;
	}
	
	public String toString()
	{
		if ( flag == true )
		{
			return "\nType: " + this.type + "\nResolution :" + this.resolution;
		}
		else
		{
			return "\nType: " + this.type;
		}
	}
}
